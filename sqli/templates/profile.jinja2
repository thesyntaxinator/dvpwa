{% extends 'base.jinja2' %}

{% block title %}User Profile{% endblock %}

{% block breadcrumbs %}
    <div class="col s12">
        <a href="/" class="breadcrumb">SQLI</a>
        <a href="#" class="breadcrumb">Profile</a>
    </div>
{% endblock %}

{% block content %}
    <h4>User Profile</h4>

    <div class="card">
        <div class="card-content">
            <span class="card-title">{{ profile_user.first_name }} {{ profile_user.middle_name or '' }} {{ profile_user.last_name }}</span>
            <table class="striped">
                <tbody>
                    <tr>
                        <td><strong>User ID</strong></td>
                        <td>{{ profile_user.id }}</td>
                    </tr>
                    <tr>
                        <td><strong>Username</strong></td>
                        <td>{{ profile_user.username }}</td>
                    </tr>
                    <tr>
                        <td><strong>First Name</strong></td>
                        <td>{{ profile_user.first_name }}</td>
                    </tr>
                    <tr>
                        <td><strong>Middle Name</strong></td>
                        <td>{{ profile_user.middle_name or 'N/A' }}</td>
                    </tr>
                    <tr>
                        <td><strong>Last Name</strong></td>
                        <td>{{ profile_user.last_name }}</td>
                    </tr>
                    <tr>
                        <td><strong>Password Hash</strong></td>
                        <td>{{ profile_user.pwd_hash }}</td>
                    </tr>
                    <tr>
                        <td><strong>Is Admin</strong></td>
                        <td>{{ profile_user.is_admin }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
